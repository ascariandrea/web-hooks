#!usr/bin/sh
#
# An example hook script for the "post-receive" event.

## App name
APP="Sample App"

# App root.
APP_ROOT=/srv/www/sample-app

# App environment
ENV='production'

# Colors

# Black        0;30     Dark Gray     1;30
# Blue         0;34     Light Blue    1;34
# Green        0;32     Light Green   1;32
# Cyan         0;36     Light Cyan    1;36
# Red          0;31     Light Red     1;31
# Purple       0;35     Light Purple  1;35
# Brown/Orange 0;33     Yellow        1;33
# Light Gray   0;37     White         1;37

red='\e[0;31m';
light_green='\e[1;32m';
no_color='\e[0m';

echo -e "${light_green}*************${no_color}"
echo -e "${light_green}Deploying $APP ${no_color}"
echo -e "${light_green}************* ${no_color}"

cd $APP_ROOT || echo -e "${red}Missing app root. ${no_color}" && return

echo -e "*************"
echo -e "Pull updates from remote."
echo -e "*************"

unset GIT_DIR
git pull origin master

echo -e "************"
echo -e "Updates pulled."
echo -e "************"

echo -e "************"
echo -e "Moving to 'app' dir."
echo -e "************"

cd app || echo -e "${red} Missing app dir. ${no_color}" && return


echo "************"
echo "Check if there are pending migrations."
echo "************"

php reactor migrate.status --env=$ENV

echo -e "${light_green}************** ${no_color}"
echo -e "${light_green}Deploy end. ${no_color}"
echo -e "${light_green}************** ${no_color}"